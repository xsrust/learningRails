<%= form_for @article,:html=> {:role => "form", :class=>"form-horizontal"} do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title ,class:"form-control", placeholder:"Enter Title"%>
  </p>
 
  <p class="form-group">
    <%= f.label :text %><br>
    <%= f.text_area :text,class:"form-control", placeholder:"Enter Text" %>
  </p>
 
  <p class="form-group">
    <%= f.submit %>
  </p>
 
<% end %>